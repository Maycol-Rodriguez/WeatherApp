<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_opciones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_theme"
    android:orientation="vertical"
    tools:context=".ui.opciones.OpcionesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/fragment_opciones"
            android:textColor="@color/Terciario"
            android:textSize="30sp"
            android:textStyle="bold" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swTemperatura"
            style="@style/Widget.App.Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Temperatura"
            android:textColor="@color/Terciario"
            android:textColorHint="#FFF"
            android:textOff="°C"
            android:textOn="°F"
            android:textSize="16sp"
            app:showText="true"
            app:switchMinWidth="50dp"
            app:switchPadding="70dp"
            app:thumbTextPadding="10dp" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swVelocidad"
            style="@style/Widget.App.Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Velocidad del Viento"
            android:textColor="@color/Terciario"
            android:textOff="m/s"
            android:textOn="°m/h"
            android:textSize="16sp"
            app:showText="true" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swPresion"
            style="@style/Widget.App.Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Presion"
            android:textColor="@color/Terciario"
            android:textOff="hpa"
            android:textOn="inHG"
            android:textSize="16sp"
            app:showText="true" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swRafagaViento"
            style="@style/Widget.App.Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Rafaga de Viento"
            android:textColor="@color/Terciario"
            android:textOff="m/s"
            android:textOn="ml/h"
            android:textSize="16sp"
            app:showText="true" />

        <Button
            android:id="@+id/btnGuardarUnidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/Secundario"
            android:onClick="enviarCambios"
            android:paddingVertical="10dp"
            android:text="Guardar Cambios"
            android:textColor="@color/Principal"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>